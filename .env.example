# ============================================
# Kohutka Web - Environment Variables
# ============================================
# Copy this file to .env and fill in the values

# ============================================
# FACEBOOK WIDGET (for reading posts on homepage)
# ============================================
# Get your credentials at: https://developers.facebook.com/apps/
# Required for Facebook social widget on homepage

VITE_FACEBOOK_APP_ID=your_facebook_app_id_here
VITE_FACEBOOK_PAGE_ACCESS_TOKEN=your_page_access_token_here
VITE_FACEBOOK_PAGE_ID=385566021470850

# ============================================
# FACEBOOK AUTO-POSTING
# ============================================
# Required for automatic posting to Facebook Page
#
# How to get these:
# 1. Create app at https://developers.facebook.com/apps/
# 2. Add "Facebook Login for Business" product
# 3. Request permissions: pages_show_list, pages_read_engagement, pages_manage_posts
# 4. Generate Page Access Token at https://developers.facebook.com/tools/explorer/
# 5. Extend token to long-lived (see docs)
#
# Token must have pages_manage_posts permission for posting to work!

FACEBOOK_PAGE_ACCESS_TOKEN=your_long_lived_page_access_token_here
FACEBOOK_APP_ID=your_app_id_here
FACEBOOK_APP_SECRET=your_app_secret_here

# Holiday Info API Download Code (required for API routes)
HOLIDAYINFO_DC=c9ixxlejab5d4mrr

# Node Environment (production/development)
NODE_ENV=development

# Server Port (default: 3000)
PORT=3000

